<?xml version="1.0" encoding="utf-8"?>
<selector android:shape="rectangle" xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dp"/>
            <solid android:color="@color/background_light_shade1"/>
            <stroke android:width="1dp" android:color="@color/error"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3dp"/>
            <solid android:color="@color/background_light_shade1"/>
            <stroke android:width="1dp" android:color="@color/background_light_shade2"/>
        </shape>
    </item>
</selector>