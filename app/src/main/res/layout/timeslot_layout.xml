<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:padding="5dp">

    <TextView
        android:id="@+id/txt_start_time"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:00"
        android:textSize="10sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:textColor="@color/colorAccent_two"
        android:layout_centerVertical="true"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/crd_salon"
        app:cardBackgroundColor="#ffffff"
        android:elevation=".5dp"
        app:cardCornerRadius="3dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.example.a21__void.afroturf.pkgCommon.SectionProgess
                android:id="@+id/sc"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:sectionColor="@color/colorTextLight"
                app:angleDeg="40"
                app:sectionSpacing="10dp"
                app:sectionThickness="1dp"
                />

            <TextView
                android:id="@+id/txt_end_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="60"
                android:layout_centerVertical="true"

                android:textStyle="bold"
                android:gravity="center"
                android:layout_alignParentRight="true"
               />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorTextLight"
                android:layout_below="@id/sc"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>