<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/user_bar"
        android:layout_width="match_parent"
        android:background="@color/lightBlack"
        android:layout_height="wrap_content"
        layout="@layout/action_bar_user"
        />
    <View
        android:id="@+id/shadow_view_4"
        android:layout_below="@+id/user_bar"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/dropshadow" />
    <android.support.v7.widget.CardView
        android:id="@+id/actual_image_card"
        android:layout_width="match_parent"
        android:layout_below="@+id/shadow_view_4"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="15dp"
        app:cardBackgroundColor="@android:color/white"

        app:cardElevation="4dp"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/serviceType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Fade"
                android:gravity="center"
                android:textSize="15dp"
                android:background="#6b60e7a6"
                android:textColor="@color/lightBlack"
                android:fontFamily="@font/roboto_regular"/>
            <ImageView
                android:id="@+id/img_service_image"
                android:layout_width="match_parent"
                android:layout_below="@+id/serviceType"
                android:src="@drawable/product_placeholder"
                android:layout_height="100dp" />

            <TextView
                android:id="@+id/ttv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/img_service_image"

                android:fontFamily="@font/roboto_bold"

                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="R150"
                android:textColor="@color/black"
                android:layout_alignParentLeft="true" />
            <Button
                android:id="@+id/btn_book_now"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/buttonshape"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/img_service_image"
                android:text="Book now"
                android:textColor="#145ef9"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/service_preview_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"

        android:layout_below="@+id/actual_image_card"
        app:cardBackgroundColor="@android:color/white"

        app:cardElevation="4dp"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="0dp">


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/service_preview_card"
        app:cardBackgroundColor="@android:color/white"

        app:cardElevation="4dp"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/booking_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/booking_icon"
                android:layout_alignParentLeft="true" />
            <TextView
                android:id="@+id/ttv_timeSlot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/booking_icon"
                android:padding="15dp"
                android:textColor="@color/lightGrey"
                android:fontFamily="@font/roboto_regular"
                android:text="25 September"
                />


            <ImageView
                android:id="@+id/stylist_icon"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_alignLeft="@+id/booking_icon"
                android:layout_alignStart="@+id/booking_icon"
                android:layout_below="@+id/ttv_timeSlot"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/mirror" />
            <TextView
                android:id="@+id/ttv_stylist_alias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/stylist_icon"
                android:layout_below="@+id/ttv_timeSlot"
                android:padding="15dp"
                android:textColor="@color/lightGrey"
                android:fontFamily="@font/roboto_regular"
                android:text="Phindile Sthah Ngubane"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>