<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeActivity">


<android.support.design.widget.FloatingActionButton
    android:id="@+id/fab_hide"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:fabSize="normal"
    android:src="@drawable/ic_arrow_down"
    android:layout_alignBottom="@id/map"
    android:layout_margin="10dp"
    android:layout_alignParentRight="true"

    />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="normal"
        android:layout_alignBottom="@id/map"
        android:src="@drawable/ic_navigate"
        android:layout_toLeftOf="@id/fab_hide"
        android:layout_marginBottom="10dp"/>

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tmp_rel"
         />

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/shadow"
        android:layout_above="@id/tmp_rel"/>

    <RelativeLayout
        android:id="@+id/tmp_rel"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:background="#eeeeee"
        >

        <Button
            android:id="@+id/btn_path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Less"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:textColor="#505050"
            android:visibility="gone"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/vpgSalons"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v4.view.ViewPager>

        <TextView
            android:id="@+id/ttvDuration"
            android:layout_width="116dp"
            android:layout_height="49dp"
            android:layout_alignBottom="@+id/btn_path"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:visibility="gone"

            android:text="Duration" />

        <TextView
            android:id="@+id/ttvDistance"
            android:layout_width="129dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:visibility="gone"
            android:text="Distance" />
    </RelativeLayout>



</RelativeLayout>