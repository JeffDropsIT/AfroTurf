<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pkgSalon.SalonActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_template"/>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        >

        <android.support.design.widget.AppBarLayout
            android:id="@+id/abl_salon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_collapseMode="parallax"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="230dp"
                        android:src="@drawable/ic_loading"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="230dp"
                        android:background="#55000000"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:padding="10dp">
                        <ImageView
                            android:id="@+id/img_tmp"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_map"
                            android:layout_alignParentBottom="true"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pretoria, The Glen Street 0083"
                            android:textColor="@color/white"
                            android:textStyle="italic"
                            android:textSize="16sp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentBottom="true"
                            android:layout_toRightOf="@id/img_tmp"/>
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_bookmark"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>

                </RelativeLayout>

            </android.support.design.widget.CollapsingToolbarLayout>



            <android.support.design.widget.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#f2f2f2"

                app:tabIndicatorColor="#f14545"/>
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/vpg_salon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:nestedScrollingEnabled="true"
            android:background="#f2f2f2"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_reviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_reviews_light"
        app:backgroundTint="#fb6c66"
        app:fabCustomSize="60dp"
        android:scaleType="fitXY"
        android:layout_above="@id/tmp_lin_base"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentRight="true"
        android:visibility="invisible"
        />

    <LinearLayout
        android:id="@+id/tmp_lin_base"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/grad"
        android:gravity="end"
        android:padding="10dp"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Book A Session"
            android:background="@drawable/round_corner"
            android:textColor="#fff"
            android:textSize="12sp"
            android:padding="15dp"
            android:visibility="gone"
            />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_booking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/booking_icon"
            app:backgroundTint="#fb6c66"
            app:fabCustomSize="60dp"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="20dp"
            android:tint="@color/white"
            />
    </LinearLayout>
</RelativeLayout>