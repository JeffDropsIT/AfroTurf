<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pkgSalon.SalonActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_template"/>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        >

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/abl_salon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_collapseMode="parallax"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="230dp"
                        android:src="@drawable/ic_loading"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="230dp"
                        android:background="#55000000"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:padding="10dp">
                        <ImageView
                            android:id="@+id/img_tmp"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_map_selected"
                            android:layout_alignParentBottom="true"/>

                        <TextView
                            android:id="@+id/txt_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pretoria, The Glen Street 0083"
                            android:textColor="@color/white"
                            android:textStyle="italic"
                            android:textSize="16sp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentBottom="true"
                            android:layout_toRightOf="@id/img_tmp"/>
                        <ImageView
                            android:id="@+id/img_bookmark"
                            android:layout_width="30dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_bookmark_deselected_light"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>

                </RelativeLayout>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#f2f2f2"

                app:tabIndicatorColor="@color/colorAccent_three"/>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vpg_salon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:nestedScrollingEnabled="true"
            android:background="#f2f2f2"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_reviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_reviews_light"
        app:backgroundTint="@color/colorAccent_three"
        app:fabCustomSize="60dp"
        android:scaleType="fitXY"
        android:layout_above="@id/tmp_lin_base"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentRight="true"
        android:visibility="invisible"
        android:tint="#3d3d3d"
        />

    <LinearLayout
        android:id="@+id/tmp_lin_base"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="end"
        android:padding="10dp"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Book A Session"
            android:background="@drawable/round_corner"
            android:textColor="#fff"
            android:textSize="12sp"
            android:padding="15dp"
            android:visibility="gone"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_booking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/booking_icon"
            app:backgroundTint="@color/colorAccent_three"
            app:fabCustomSize="60dp"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="20dp"
            android:tint="#3d3d3d"
            />
    </LinearLayout>

    <me.zhanghai.android.materialprogressbar.MaterialProgressBar
        android:id="@+id/prog_background_work"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:indeterminate="true"
        app:mpb_progressStyle="horizontal"
        app:mpb_useIntrinsicPadding="false"
        android:layout_alignBaseline="@+id/toolbar"
        android:layout_alignBottom="@+id/toolbar"
        style="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal" />
</RelativeLayout>