<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/crd_salon"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        app:cardBackgroundColor="@color/snoh_white"
        android:elevation="3dp"
        app:cardCornerRadius="5dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_banner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_locationpin"
                android:tint="@color/colorTextDark"
                android:scaleType="center"
                android:layout_above="@+id/tmp_lin_base"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#22000000"
                android:layout_above="@+id/tmp_lin_base"
                android:padding="10dp">

                <RatingBar
                    android:id="@+id/rat_rating"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="5dp"
                    android:numStars="5"
                    android:progressTint="@color/snoh_amber"
                    android:isIndicator="true"
                    android:stepSize="0.5"
                    android:rating="3.5"

                    />

                <com.wang.avi.AVLoadingIndicatorView
                    android:id="@+id/av_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:indicatorColor="@color/colorTextSuperDark"
                    app:indicatorName="BallScaleMultipleIndicator"
                    android:layout_centerInParent="true"
                    android:layout_above="@+id/txt_msg"
                    />


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/tmp_lin_base"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:orientation="vertical"
                android:padding="10dp">

                <com.example.a21__void.afroturf.pkgCommon.AfroTextView
                    android:id="@+id/txt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Salon Name"
                    android:textColor="@color/colorTextSuperDark"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:textColor="@color/colorTextDark" />


            </LinearLayout>



        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>