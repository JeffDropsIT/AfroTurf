<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/img_cover"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/ic_img"
        />

    <LinearLayout
        android:id="@+id/lin_tmp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_cover"
       android:layout_centerHorizontal="true"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_find_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="0dp"
            android:layout_marginLeft="0dp"
            android:visibility="gone"
            android:layout_marginTop="80dp"
            android:text="Map &amp; Direction" />
    </LinearLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/nav_temp"
        android:layout_below="@+id/lin_tmp"
        android:layout_width="match_parent"
        app:menu="@menu/nav_items"
        android:layout_height="56dp">

    </android.support.design.widget.BottomNavigationView>


    <android.support.v4.view.ViewPager
        android:id="@+id/stylist_container"
        android:layout_below="@+id/nav_temp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v4.view.ViewPager>




</RelativeLayout>